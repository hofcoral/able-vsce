{
    "name": "able",
    "displayName": "Able Language Support",
    "description": "Syntax highlighting, formatting, and language features for the Able language.",
    "version": "0.1.2",
    "publisher": "hofcoral",
    "engines": {
        "vscode": "^1.50.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "able",
                "aliases": [
                    "Able"
                ],
                "extensions": [
                    ".abl"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "able",
                "scopeName": "source.able",
                "path": "./syntaxes/able.tmLanguage.json"
            }
        ],
        "configuration": {
            "title": "Able",
            "properties": {
                "able.stdlibPaths": {
                    "type": "array",
                    "default": [],
                    "description": "Additional paths to scan for Able modules (e.g. /path/to/able/lib).",
                    "items": {
                        "type": "string"
                    }
                },
                "able.useEnvAblePath": {
                    "type": "boolean",
                    "default": true,
                    "description": "Include ABLEPATH in module search paths."
                }
            }
        }
    },
    "main": "./out/extension.js",
    "activationEvents": [
        "onLanguage:able"
    ],
    "icon": "resources/able-icon.png",
    "scripts": {
        "compile": "tsc -p ./",
        "test": "npm run compile && node --test out/tests/**/*.test.js",
        "watch": "tsc -watch -p ./",
        "vscode:prepublish": "npm run compile"
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.1",
        "vscode-languageserver": "^9.0.1",
        "vscode-languageserver-textdocument": "^1.0.11"
    },
    "devDependencies": {
        "@types/node": "^20.11.19",
        "@types/vscode": "^1.50.0",
        "typescript": "^5.4.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/yourusername/able-vsce.git"
    }
}
