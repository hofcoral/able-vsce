{
    "name": "able",
    "displayName": "Able Language Support",
    "description": "Syntax highlighting, formatting, and language features for the Able language.",
    "version": "0.0.1",
    "publisher": "hofcoral",
    "engines": {
        "vscode": "^1.50.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "able",
                "aliases": [
                    "Able"
                ],
                "extensions": [
                    ".abl"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "able",
                "scopeName": "source.able",
                "path": "./syntaxes/able.tmLanguage.json"
            }
        ]
    },
    "main": "./out/extension.js",
    "activationEvents": [
        "onLanguage:able"
    ],
    "icon": "resources/able-icon.png",
    "scripts": {
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "vscode:prepublish": "npm run compile"
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.1",
        "vscode-languageserver": "^9.0.1",
        "vscode-languageserver-textdocument": "^1.0.11"
    },
    "devDependencies": {
        "@types/node": "^20.11.19",
        "@types/vscode": "^1.50.0",
        "typescript": "^5.4.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/yourusername/able-vsce.git"
    }
}
